<h1>Create a new Figure</h1>
 
<form action="/figures" method="POST">
  <label> Name </label>
  <input type="text" id="figure_name" name="figure[name]"> </br>
  
  <h3>Title</h3>
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>">
  <% end %>
  
  <label>Create New Title:</label>
  <input id="new_title" type="text" name="title[name]"> </br>
  
  <h3>Landmark</h3>
  <% Landmark.all.each do |landmark| %>
  <label><%= landmark.name %></label>
  <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>">
  <% end %>
  
  <label>Create New Landmark:</label>
  <input id="new_landmark" type="text" name="landmark[name]"> </br>
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]">
   <input type="submit" value="Create New Figure">
 </form>
 
     


 
